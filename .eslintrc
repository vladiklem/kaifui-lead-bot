{
  "env": {
    "browser": true,
    "commonjs": true
  },
  "extends": ["airbnb-base", "prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "global-require": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "no-return-await": 0,
    "no-console": 0,
	"no-useless-escape": 0, 
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 4
      }
    ]
  }
}
